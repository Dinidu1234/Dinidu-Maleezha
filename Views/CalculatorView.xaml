<UserControl x:Class="KickBlastStableLight.Views.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Border Style="{StaticResource CardBorderStyle}">
            <StackPanel>
                <TextBlock Text="Monthly Calculator" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                <WrapPanel>
                    <StackPanel Margin="0,0,12,0"><TextBlock Text="Athlete"/><ComboBox x:Name="CmbAthlete" Width="200" SelectionChanged="CmbAthlete_SelectionChanged"/></StackPanel>
                    <StackPanel Margin="0,0,12,0"><TextBlock Text="Competitions"/><TextBox x:Name="TxtCompetitions" Style="{StaticResource RoundedTextBox}" Width="120" Text="0"/></StackPanel>
                    <StackPanel Margin="0,0,12,0"><TextBlock Text="Coaching Hours (0-5)"/><TextBox x:Name="TxtCoachingHours" Style="{StaticResource RoundedTextBox}" Width="120" Text="0"/></StackPanel>
                    <StackPanel VerticalAlignment="Bottom"><Button x:Name="BtnCalculate" Content="Calculate + Save" Style="{StaticResource PrimaryButtonStyle}" Click="BtnCalculate_Click"/></StackPanel>
                </WrapPanel>
                <TextBlock x:Name="TxtInlineError" Foreground="{StaticResource BrushDanger}" Margin="0,8,0,0"/>
                <TextBlock x:Name="TxtBeginnerNote" Foreground="{StaticResource BrushMuted}" Margin="0,8,0,0"/>
                <Separator Margin="0,12,0,12"/>
                <TextBlock x:Name="TxtResult" FontSize="16" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        <Border x:Name="ToastBorder" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Background="#2563EB" CornerRadius="10" Padding="12,8" Visibility="Collapsed">
            <TextBlock x:Name="ToastText" Foreground="White"/>
        </Border>
    </Grid>
</UserControl>
