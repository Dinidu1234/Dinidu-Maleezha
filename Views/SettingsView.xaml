<UserControl x:Class="KickBlastStableLight.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Border Style="{StaticResource CardBorderStyle}" MaxWidth="560" HorizontalAlignment="Left">
            <StackPanel>
                <TextBlock Text="Pricing Settings" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                <TextBlock Text="Beginner"/><TextBox x:Name="TxtBeginner" Style="{StaticResource RoundedTextBox}"/>
                <TextBlock Text="Intermediate" Margin="0,8,0,0"/><TextBox x:Name="TxtIntermediate" Style="{StaticResource RoundedTextBox}"/>
                <TextBlock Text="Elite" Margin="0,8,0,0"/><TextBox x:Name="TxtElite" Style="{StaticResource RoundedTextBox}"/>
                <TextBlock Text="Competition" Margin="0,8,0,0"/><TextBox x:Name="TxtCompetition" Style="{StaticResource RoundedTextBox}"/>
                <TextBlock Text="Coaching Rate" Margin="0,8,0,0"/><TextBox x:Name="TxtCoachingRate" Style="{StaticResource RoundedTextBox}"/>
                <TextBlock x:Name="TxtInlineError" Foreground="{StaticResource BrushDanger}" Margin="0,8,0,8"/>
                <Button x:Name="BtnSave" Content="Save Settings" Style="{StaticResource PrimaryButtonStyle}" Click="BtnSave_Click" Width="140"/>
            </StackPanel>
        </Border>
        <Border x:Name="ToastBorder" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Background="#2563EB" CornerRadius="10" Padding="12,8" Visibility="Collapsed">
            <TextBlock x:Name="ToastText" Foreground="White"/>
        </Border>
    </Grid>
</UserControl>
