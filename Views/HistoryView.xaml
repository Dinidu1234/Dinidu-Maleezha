<UserControl x:Class="KickBlastStableLight.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Border Style="{StaticResource CardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                <WrapPanel Margin="0,0,0,10">
                    <ComboBox x:Name="CmbAthlete" Width="180" Margin="0,0,8,0" SelectionChanged="Filter_Changed"/>
                    <ComboBox x:Name="CmbMonth" Width="150" Margin="0,0,8,0" SelectionChanged="Filter_Changed"/>
                    <TextBox x:Name="TxtYear" Width="100" Style="{StaticResource RoundedTextBox}" TextChanged="Filter_Changed"/>
                </WrapPanel>
                <DataGrid x:Name="GridHistory" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="GridHistory_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Athlete" Binding="{Binding AthleteName}" Width="*"/>
                        <DataGridTextColumn Header="Plan" Binding="{Binding Plan}" Width="120"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="120"/>
                        <DataGridTextColumn Header="Month" Binding="{Binding MonthName}" Width="120"/>
                        <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Border x:Name="Drawer" Width="360" HorizontalAlignment="Right" Background="White" BorderBrush="{StaticResource BrushCardBorder}" BorderThickness="1" Visibility="Collapsed">
            <StackPanel Margin="16">
                <TextBlock Text="History Details" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                <TextBlock x:Name="TxtDetails" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
