<UserControl x:Class="KickBlastStableLight.Views.AthletesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Border Style="{StaticResource CardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="TxtSearch" Width="220" Style="{StaticResource RoundedTextBox}" TextChanged="TxtSearch_TextChanged"/>
                    <ComboBox x:Name="CmbPlanFilter" Width="160" Margin="10,0,0,0" SelectionChanged="CmbPlanFilter_SelectionChanged">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Beginner"/>
                        <ComboBoxItem Content="Intermediate"/>
                        <ComboBoxItem Content="Elite"/>
                    </ComboBox>
                </StackPanel>
                <DataGrid x:Name="GridAthletes" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="GridAthletes_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="70"/>
                        <DataGridTextColumn Header="Plan" Binding="{Binding Plan}" Width="140"/>
                        <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" Width="100"/>
                        <DataGridTextColumn Header="Target" Binding="{Binding TargetWeight}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Button x:Name="BtnFab" Style="{StaticResource FabButtonStyle}" Content="+" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,18,18" Click="BtnFab_Click"/>

        <Border x:Name="Drawer" Width="360" HorizontalAlignment="Right" Background="White" BorderBrush="{StaticResource BrushCardBorder}" BorderThickness="1" Visibility="Collapsed">
            <ScrollViewer>
                <StackPanel Margin="16">
                    <TextBlock Text="Athlete Form" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <TextBlock Text="Name"/><TextBox x:Name="TxtName" Style="{StaticResource RoundedTextBox}"/>
                    <TextBlock Text="Age" Margin="0,8,0,0"/><TextBox x:Name="TxtAge" Style="{StaticResource RoundedTextBox}"/>
                    <TextBlock Text="Plan" Margin="0,8,0,0"/>
                    <ComboBox x:Name="CmbPlan"><ComboBoxItem Content="Beginner"/><ComboBoxItem Content="Intermediate"/><ComboBoxItem Content="Elite"/></ComboBox>
                    <TextBlock Text="Weight" Margin="0,8,0,0"/><TextBox x:Name="TxtWeight" Style="{StaticResource RoundedTextBox}"/>
                    <TextBlock Text="Target Weight" Margin="0,8,0,0"/><TextBox x:Name="TxtTargetWeight" Style="{StaticResource RoundedTextBox}"/>
                    <TextBlock Text="Notes" Margin="0,8,0,0"/><TextBox x:Name="TxtNotes" Style="{StaticResource RoundedTextBox}"/>
                    <TextBlock x:Name="TxtInlineError" Foreground="{StaticResource BrushDanger}" Margin="0,8,0,8" TextWrapping="Wrap"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="BtnSave" Content="Save" Style="{StaticResource PrimaryButtonStyle}" Click="BtnSave_Click"/>
                        <Button x:Name="BtnClear" Content="Clear" Style="{StaticResource SecondaryButtonStyle}" Click="BtnClear_Click"/>
                        <Button x:Name="BtnDelete" Content="Delete" Style="{StaticResource SecondaryButtonStyle}" Click="BtnDelete_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border x:Name="ToastBorder" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,84" Background="#2563EB" CornerRadius="10" Padding="12,8" Visibility="Collapsed">
            <TextBlock x:Name="ToastText" Foreground="White"/>
        </Border>
    </Grid>
</UserControl>
